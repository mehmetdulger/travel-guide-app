<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.detail.DetailFragment">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="442dp"
            android:elevation="50dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearance="@style/detailImageView" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/detailImagesRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="18dp"
            android:background="@drawable/detail_images_bar_backgraound"
            android:elevation="50dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="@+id/imageView" />

        <TextView
            android:id="@+id/detailTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/source_sans_pro"
            android:text="Detail Title"
            android:textColor="#0A2753"
            android:textFontWeight="400"
            android:textSize="28sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <TextView
            android:id="@+id/detailLocationTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:drawableStart="@drawable/ic_pin_icon"
            android:fontFamily="@font/source_sans_pro"
            android:text="  city, country"
            android:textFontWeight="300"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="@+id/detailTitleTextView"
            app:layout_constraintTop_toBottomOf="@+id/detailTitleTextView" />

        <ScrollView
            android:id="@+id/detailScrollView"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/detailLocationTextView">

            <TextView
                android:id="@+id/detailDescriptionTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/source_sans_pro"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Est vel odio elementum non id venenatis, elementum. Enim augue velit tristique eu viverra. Massa.
Lorem ipsum dolor sit amet, consectetur adipiscing elit. Est vel odio elementum non id venenatis, elementum. Enim augue velit tristique eu viverra. Massa."
                android:textFontWeight="300"
                android:textSize="16sp" />


        </ScrollView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/bookmark_button_background"
            android:text="Add Bookmark"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:fontFamily="@font/source_sans_pro"
            android:textFontWeight="600"
            android:textAllCaps="false"
            app:layout_constraintEnd_toEndOf="@+id/detailScrollView"
            app:layout_constraintStart_toStartOf="@+id/detailScrollView"
            app:layout_constraintTop_toBottomOf="@+id/detailScrollView"
            app:shapeAppearance="@color/white" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>