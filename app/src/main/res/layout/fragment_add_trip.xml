<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Trip.AddTripFragment">


    <EditText
        android:id="@+id/addTripLocationEditText"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="@drawable/add_bookmark_background"
        android:elevation="6dp"
        android:hint="Where are you going.."
        android:layout_marginTop="70dp"
        android:padding="12dp"
        app:layout_constraintEnd_toEndOf="@+id/backgroundTextView"
        app:layout_constraintStart_toStartOf="@+id/backgroundTextView"
        app:layout_constraintTop_toTopOf="@+id/backgroundTextView" />

    <EditText
        android:id="@+id/addTripDateEditText"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="@drawable/add_bookmark_background"
        android:elevation="6dp"
        android:hint="When will you go"
        android:layout_marginTop="50dp"
        android:padding="12dp"
        app:layout_constraintEnd_toEndOf="@+id/backgroundTextView"
        app:layout_constraintStart_toStartOf="@+id/backgroundTextView"
        app:layout_constraintTop_toBottomOf="@+id/addTripLocationEditText" />


    <TextView
        android:id="@+id/backgroundTextView"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="130dp"
        android:background="@drawable/add_bookmark_properties_background"
        android:elevation="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addTripTitleTextView" />

    <TextView
        android:id="@+id/addTripTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Trip"
        style="@style/title_text_style"
        android:textSize="35sp"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/addTripButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@drawable/add_trip_button_background"
        android:text="Add Trip"
        style="@style/text_style"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/backgroundTextView"
        app:layout_constraintStart_toStartOf="@+id/backgroundTextView"
        app:layout_constraintTop_toBottomOf="@+id/backgroundTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>